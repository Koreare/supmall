/* @import '../../style/font.wxss'; */
.center_nav{
  color:white;
}
.center_nav_img{
  position: relative;
  text-align: center;
  display: flex;
  align-items: center;
  padding:0 30rpx;
}
.user_info{
  height: 120rpx;
  margin-left:20rpx;
  text-align: left;
}
.sign{
  position: absolute;
  height: 50rpx;
  right: 30rpx;
  top:45%;
  margin-top: -25rpx;
  background-color: #FFFFFF;
  color:#44BBFF;
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  padding:5rpx 30rpx;
}
.sign image{
  width: 50rpx;
  height: 50rpx;
}
.sign text{
  font-size: 28rpx;
  margin-left: 10rpx;
}
.center_nav_img .info-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 77rpx;
  border: 4rpx solid #fff;
  background-color:white;
}
.center_nav_t{
  font-size:34rpx;
  margin-top:10rpx;
  margin-bottom: 30rpx;
}
.phone{
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.phone text{
  margin-right: 15rpx;
}
.loginBtn{
  background-color:#44BBFF;
  color:white;
  line-height:32rpx;
  font-size:32rpx;
  padding:15rpx 25rpx;
  margin-left: 10px;
}
.person-top{
  background-image: linear-gradient(#62A5FF, #29C0D9);
  height: 380rpx;
}
.money_1{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.line{
  height: 40rpx;
  width: 5rpx;
  background-color: #f5f5f5;
  margin-right: 50rpx;
  margin-left: 50rpx;
}
.money_info{
  font-size: 38rpx;
  color:rgba(255,255,255,1);
}
.money_name{
  font-size: 38rpx;
  color:rgba(255,255,255,1);
}


.all{
  width: 90%;
  margin: 5%;
  border: 5rpx solid #f5f5f5;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  margin-top: -70rpx;
}
.all_info{
  display: flex;
  justify-content: space-between;
  align-content: center;
  height: 80rpx;
  margin-top: 20rpx;
}
.all_info view{
  font-size: 32rpx;
  color:rgba(51,51,51,1);
  margin-left: 30rpx;
}
.all_info image{
   height: 35rpx;
   width: 30rpx;
   margin-right: 30rpx;
}
.all_name_1 image{
  height: 55rpx;
  width: 55rpx;
}
.all_name_1{
  text-align: center;
  position: relative;
}
.all_name_1 view{
  font-size: 25rpx;
  color:rgba(102,102,102,1);
}
.all_name{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
  
}
.round{
  position: absolute;
  top: -10rpx;
  left: 33rpx;
  z-index: 99;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  font-size: 25rpx;
  line-height: 40rpx;
  color: #62A5FF;
  border: 1rpx solid #62A5FF;
  text-align: center;
}



