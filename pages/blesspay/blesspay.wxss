.header{
  height: 100rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.header_name{
  display: flex;
  align-items: center;
  margin-top: -75rpx;
}
.img{
  width: 60rpx !important;
}
.header_name image{
  height: 60rpx;
  width: 40rpx;
  margin-left: 25rpx;
  margin-right: 10rpx;
}
.header_name view{
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}
.top{
  margin-top: 10rpx;
}
.top_image{
  height: 180rpx;
  width: 180rpx;
}
.top_image image{
  height: 100%;
  width: 100%;
  border-radius: 14rpx 0 0 14rpx;
}
.top_n{
  display: flex;
  width: 95%;
  margin-left: 2.5%;
  background-color: #f5f5f5;
  border-radius: 14rpx;
}
.name1{
  font-size: 30rpx;
  margin-top: 15rpx;
  margin-bottom: 60rpx;
  color:rgba(102,102,102,1);
}
.name2{
  font-size: 28rpx;
  color:rgba(102,102,102,1);
}
.name2 text{
  font-size: 33rpx;
  color: rgba(255, 0, 0, 1);
}
.top_name{
  margin-left: 15rpx;
}
.top_info{
  display: flex;
  align-items: center;
  height: 250rpx;
}
.in_way{
  height: 120rpx;
  display: flex;
  padding-left: 2.5%;
  align-items: center;
  font-size: 35rpx;
  color:rgba(102,102,102,1);
  border-top: 5rpx solid #f5f5f5;
  border-bottom: 5rpx solid #f5f5f5;
}
.in_info_image image{
  height: 42rpx;
  width: 47rpx;
  margin-left: 40rpx;
  margin-right: 10rpx;
}
.in_info_image view{
  font-size: 32rpx;
  color:rgba(153,153,153,1);
}
.png{
  height: 45rpx;
  width: 45rpx;
  margin-right: 30rpx;
}
.in_info_image{
  display: flex;
  align-items: center;
}
.in_info{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 5rpx solid #f5f5f5;
}
.button{
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20%;
  text-align: center;
   background-image: linear-gradient(#62A5FF, #29C0D9);
   font-size: 32rpx;
   color: #ffffff;
   border-radius: 40rpx;
   margin-top: 100rpx;
}
.button text{
  font-size: 35rpx;
  font-weight: 400;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
   margin-right: 30rpx;
}


























