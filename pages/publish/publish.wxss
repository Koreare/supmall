.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.shop_info{
  display: flex;
  align-items: center;
  height: 200rpx;
}
.shop_name{
  margin-right: 30rpx;
}
.shop_num{
  display: flex;
  justify-content: space-between;
}
.num{
  width: 100rpx;
  height: 40rpx;
  border: 5rpx solid#DCDCDC;
  font-size: 25rpx;
  line-height: 40rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  border-radius: 14rpx;
}
.name{
  font-size: 33rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 30rpx;
}
.day{
  width: 180rpx;
  height: 30rpx;
  font-size: 22rpx;
  text-align: center;
  color:rgba(252,255,253,1);
  border-radius: 40rpx;
  line-height: 30rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.img{
  margin-right: 15rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  width: 180rpx;
  height: 150rpx;
}
.img image{
  border-radius: 20rpx;
  height: 100%;
  width: 100%;
}
.shop{
  width: 95%;
  margin-left: 2.5%;
  border-radius: 14rpx;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}
.line{
  margin-top: 50rpx;
  border: 2rpx solid #f5f5f5;
}
.top{
  height: 230rpx;
  border-bottom: 22rpx solid #f5f5f5;
}
.top_info_image{
  display: flex;
  align-items: center;
}
.top_info_image image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}
.top_info{
  display:flex;
  align-items: center;
  margin: 30rpx 0 30rpx 30rpx;
}
.top_info view{
  font-size: 32rpx;
  color:rgba(153,153,153,1);
  margin-right: 30rpx;
}
.in{
  height: 500rpx;
  margin-top: 30rpx;
  padding-left: 30rpx;
  border-bottom: 5rpx solid #f5f5f5;
}
.in textarea{
  width: 100%;
}
.in_img{
  height: 180rpx;
  width: 180rpx;
}
.in_img image{
  height: 100%;
  width: 100%;
}
.button{
  width: 70%;
  height: 70rpx;
  margin-left: 15%;
  line-height: 70rpx;
  background-color: #dcdcdc;
  text-align: center;
  font-size: 38rpx;
  color:rgba(153,153,153,1);
  border-radius: 50rpx;
  margin-top: 80rpx;
}
.mark{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000000;
  opacity: 0.5;
}
.info{
  height: 350rpx;
  border-radius: 40rpx;
  width: 70%;
  margin-left: 15%;
  background-color: #ffffff;
  position: fixed;
  top: 25%;
}
.info_name_3{
  font-size: 35rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  margin: 50rpx 30rpx 0 30rpx;
}
.info_name{
  display: flex;
  justify-content: space-around;
  margin-top: 90rpx;
}
.info_name_1{
  height: 80rpx;
  width: 180rpx;
  text-align: center;
  line-height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
  font-size: 35rpx;
  color:rgba(255,255,255,1);
  border-radius: 20rpx;
}
.info_name_2{
  height: 80rpx;
  width: 180rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #f5f5f5;
  font-size: 35rpx;
  color:rgba(153,153,153,1);
  border-radius: 20rpx;
}



