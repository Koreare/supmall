.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top_name{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 5rpx solid #f5f5f5;
}
.top_name view{
  font-size: 32rpx;
  margin-left: 30rpx;
}
.top_name input{
  width: 70%;
  font-size: 30rpx;
}
.p image{
  height: 30rpx;
  width: 30rpx;
}
.p{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 110rpx;
  height:45rpx;
  border-radius: 14rpx;
  border: 5rpx solid #dcdcdc;
  margin-right: 20rpx;
}
.p view{
  margin-right: 20rpx;
  font-size: 28rpx;
  color:rgba(153,153,153,1);
}
.top_info{
  height: 120rpx;
  align-items: center;
  border-bottom: 5rpx solid #f5f5f5;
  display: flex;
}
.top_loc{
  display: flex;
  margin-left: 76rpx;
  width: 65%;
  font-size: 30rpx;
}
.name{
  font-size: 32rpx;
  margin-left: 30rpx;
}
.top_image{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  border-bottom: 5rpx solid #f5f5f5;
}
.floatright{
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}
.top_image view{
  font-size: 32rpx;
  margin-left: 30rpx;
}
.button1{
  /* width: 70%;
  margin-left: 15%; */
  height: 90rpx;
  line-height: 90rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
  text-align: center;
  font-size: 34rpx;
  color:rgba(255,255,255,1);
  /* border-radius: 50rpx;
  margin-top: 80rpx;
  margin-bottom: 80rpx; */
  position: fixed;
  bottom: 0;
  width: 100%;
}
button::after{
  border-radius: 0px;
}
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 11;
  background: rgba(0, 0, 0, 0.3);
}
.address_info{
  position: absolute;
  top: 0;
  z-index: 33;
}
.state-item {
  width: 20%;
  height: 70rpx;
  font-size: 11pt;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
}

.border.state-item {
  border: 2rpx solid #c4245c;
}

.date {
  min-width: 40%;
  display: flex;
  font-size: 11pt;
  color: #bdbdbd;
  align-items: center;
}

.date-btn {
  min-width: 80%;
  font-size: 12pt;
  background-color: #c4245c;
  color: #fff;
  position: fixed
}


.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 40vh;
  position: relative;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}
.shshixian{
  font-size: 30rpx;
  width: 100%;
}

