.bg{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #CC0000;
}
.bg image{
  height: 100%;
  width: 100%;
}
.header{
  display: flex;
  align-items: center;
  position: relative;
