.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 5rpx solid #f5f5f5;
}
.top_name{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
  position: relative;
}
.round{
  position: absolute;
  top: 0rpx;
  right: -14rpx;
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  background-color: #CB2924;
}
.active{
  color: #62A5FF;
}
.in{
  width: 95%;
  margin-left: 2.5%;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}
.in_info{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.in_info view{
  font-size: 32rpx;
  color:rgba(51,51,51,1);
  margin-left: 30rpx;
}
.in_info text{
  font-size: 30rpx;
  color:rgba(153,153,153,1);
  margin-right: 30rpx;
}
.image{
  height: 180rpx;
  width: 200rpx;
  border: 5rpx solid #f5f5f5;
  border-radius: 20rpx;
  margin-right: 25rpx;
  margin-left: 25rpx;
}
.image image{
  border-radius: 20rpx;
  height: 100%;
  width: 100%;
}
.in_image{
  width: 100%;
  position: relative;
}
.in_name{
  position: absolute;
  top: 10rpx;
  left: 240rpx;
  width: 66%;
}
.in_name view{
  font-size: 32rpx;
  color:rgba(51,51,51,1);
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.in_name text{
  width: 180rpx;
  height: 60rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 40rpx;
  color:rgba(252,255,253,1);
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.name{
  display: inline-block;
  width: 100%;
  font-size: 32rpx;
  color: rgba(153,153,153,1);
  padding-top: 10px;
  word-break: break-all;

}

.time{
  font-size: 32rpx;
  color: rgba(153,153,153,1);
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.content_info{
  width: 90%;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-left: 1%;
  padding: 0 30rpx;

}
.content_info::-webkit-scrollbar {display:none}
.number_image{
  display: flex;
  align-items: center;
}
.number_image input{
  width: 50%;
  height: 50rpx;
  border-radius: 40rpx;
  padding-left: 30rpx;
  background-color: #f5f5f5;
  margin-right: 30rpx;
  border: 1px solid #dcdcdc;
  margin-left: 7%;
}
.input-placeholder{
  font-size: 30rpx;
}
.number_name{
  font-size: 30rpx;
  color: rgba(152,152,152,1);
  width: 117rpx;
  line-height: 56rpx;
  margin: 0;
  height: 56rpx;
}