.header{
  width: 100%;
  height: 100rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9) !important; 
}

.ad{
  border-radius: 20rpx;
  width: 90%;
  margin-left: 5%;
  margin-top: 40rpx;
  border: 2px solid	#DCDCDC;
  box-shadow: 4rpx 4rpx 5rpx 	#DCDCDC;
  padding-bottom: 30rpx;
}

.ad_info{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ad_info image{
  height: 45rpx;
  width: 45rpx;
  margin-right: 20rpx;
}
.ad_info view{
  font-size: 35rpx;
}
.ad_money{
  margin-top: 20rpx;
  border-radius: 20rpx;
  width: 28%;
  background-color:#F5F5F5;
  height: 170rpx;
  text-align: center;
  margin-left: 24rpx;
}
.active{
   background-image: linear-gradient(#62A5FF, #29C0D9) !important;
   color:rgba(255,255,255,1) !important;
}
.info{
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
}
.money{
  padding-top: 30rpx;
  font-size: 35rpx;
}
.day{
  padding-top: 20rpx;
}

.wxchat{
  display: flex;
  margin-left: 28rpx;
  align-items: center;
}
.wxchat image{
  width: 55rpx;
  height: 41rpx;
  margin-top: 7rpx;
}
.wxchat view{
  margin-left: 10rpx;
  font-size: 34rpx;
  color:rgba(153,153,153,1);
}
.choice{
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
}
.pay{
  background-color: 	#F5F5F5;
  margin: 20rpx 0;
  padding-bottom: 20rpx
}
.pay_info{
  font-size: 35rpx;
  margin-left: 30rpx;
  padding-top: 20rpx;
  color:rgba(102,102,102,1);
}
.wxParse{
  margin-top: 20rpx;
}
.wxchat_info{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
.button{
  width: 70%;
  background-image: linear-gradient(#62A5FF, #29C0D9) !important;
  height: 80rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 80rpx;
  color:rgba(255,255,255,1);
  font-size: 38rpx;
  margin-left: 15%;
  margin-top: 60rpx;
  margin-bottom: 50rpx;
}
.prompt{
  width: 90%;
  margin-left: 5%;
  margin-right: 30rpx !important;
  color:rgba(102,102,102,1) !important;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
   margin-right: 30rpx;
}