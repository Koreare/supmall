  top: 32rpx;
  left: -30rpx;
}
.income_info_1 text{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
}
.mark{
	position:fixed;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
	background-color: #000000;
	z-index: 1000;
	opacity: 0.4;
}
.footer{
  z-index: 1002;
  height: 330rpx;
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.footer_info{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
}
.footer_info image{
  height: 55rpx;
  width: 55rpx;
  margin-right: -80rpx;
}
.footer_info view{
  font-size: 35rpx;
}
.footer_name{
  height: 90rpx;
  border-bottom: 5rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 10rpx 30rpx;
  margin-top: 30rpx;
}
.footer_name image{
  height: 40rpx;
  width: 40rpx;
}
.footer_name{
  font-size: 36rpx;
}
