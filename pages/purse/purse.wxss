.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.bg{
  width: 100%;
  height: 100%;
  padding-bottom: 50rpx;
  background-color: #f5f5f5;
}
.day{
  display: flex;
  justify-content: flex-end;
  margin-right: 25rpx;
  padding-top: 30rpx;
  height: 60rpx;
  font-size: 35rpx;
  color:rgba(102,102,102,1);
}
.day_info{
  display: flex;
 align-items: center;
}
.day_info image{
  margin-left: 15rpx;
  height: 35rpx;
  width:35rpx;
}
.in{
  width: 95%;
  height: 380rpx;
  margin-top: 30rpx;
  margin-left: 2.5%;
  border-radius: 20rpx;
  background-image: linear-gradient(to right,#62A5FF, #29C0D9);
}
.in_name{
   font-size: 32rpx;
   color:rgba(255,255,255,1);
   padding-top: 30rpx;
   margin-left: 30rpx;
}
.in_money{
  font-size: 30rpx;
  color:rgba(255,255,255,1);
  padding-top: 30rpx;
   margin-left: 30rpx;
}
.in_money text{
  font-size: 34rpx;
}
.in_info{
  margin-top: 70rpx;
  display: flex;
  align-items: center;
}
.in_info_1{
  color:rgba(255,255,255,1);
  margin-left: 30rpx;
  margin-right: 50rpx;
}
.in_info_1 view{
  font-size: 32rpx;
  margin-bottom: 15rpx;
  margin-left: 10rpx;
}
.in_info_1 text{
  font-size: 30rpx;
}
.in_info_2{
  color:rgba(255,255,255,1);
}
.in_info_1 text text,.in_info_2 text text{
  font-size: 34rpx;
}
.in_info_2 view{
  font-size: 32rpx;
  margin-bottom: 15rpx;
  margin-left: 10rpx;
}
.in_info_2 text{
  font-size: 30rpx;
}
.money{
  width: 95%;
  height: 100rpx;
  margin-left: 2.5%;
  margin-top: 30rpx;
  display: flex;
  border-radius: 14rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
}
.money_info{
  display: flex;
  align-items: center;
}
.money_info text{
  margin-right: 25rpx;
}
.money_name{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
  margin-left: 25rpx;
}
.money_info{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
}
.money_info view{
  padding-right: 15rpx;
  border-right: 5rpx solid #dcdcdc;
}
.money_info text{
  margin-left: 20rpx;
  margin-right: 25rpx;
}
.under{
  width: 95%;
  margin-top: 30rpx;
  margin-left: 2.5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color:rgba(102,102,102,1);
}
.under view{
  margin-left: 25rpx;
}
.under text{
  margin-right: 30rpx !important;
}
.income{
  width: 95%;
  margin-top: 25rpx;
  margin-left: 2.5%;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.income_all{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #f5f5f5;
}
.income_name view{
  display: flex;
  justify-content: flex-end;
}
.income_name{
  margin-right: 30rpx;
  margin-top: 30rpx;
  width: 50%;
}
.income_info{
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 50%;
}
.income_info view{
  font-size: 35rpx;
  margin-bottom: 15rpx;
  margin-left: 35rpx;
  color:rgba(255,16,16,1);
}
.income_info view::before{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  background-color:rgba(255,16,16,1);
  border-radius: 50%; 
  position: relative;
  top: 32rpx;
  left: -30rpx;
}
.income_info text{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
}
.income_name_money{
  font-size: 35rpx;
  margin-bottom: 15rpx;
  color:rgba(102,102,102,1);
}
.income_name_info{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
}
.income_info_1{
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 50%;
}
.income_info_1 view{
  font-size: 35rpx;
  margin-bottom: 15rpx;
  margin-left: 35rpx;
  color:rgba(72,229,72,1);
}
.income_info_1 view::before{
  content: "";
