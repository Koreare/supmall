.pay{
  width: 95%;
  margin-left: 2.5%;
  border-radius: 20rpx;
  margin-top: 30rpx;
 height: 200rpx;
 display: flex;
 align-items: center;
 background-image: linear-gradient(#62A5FF, #29C0D9);
}
.pay image{
  height: 80rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
}
.first{
  display: flex;
  align-items: center;
}
.pay_info view{
  margin-top: -20rpx;
  margin-right: 220rpx;
  margin-bottom: 25rpx;
  font-size: 35rpx;
  color:rgba(255,255,255,1);
}
.pay_info text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.money{
  color:rgba(255,255,255,1);
  font-size: 40rpx;
}
.shop{
  border-radius: 50rpx;
  border: 5rpx solid	#DCDCDC;
  width: 70%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color:rgba(102,102,102,1);
  font-size: 35rpx;
  margin-left: 15%;
  margin-top: 80rpx;

}
.continue{
   background-image: linear-gradient(#62A5FF, #29C0D9);
   width: 70%;
   margin-left: 15%;
   height: 80rpx;
   line-height: 80rpx;
   border-radius: 50rpx;
   text-align: center;
   font-size: 35rpx;
   margin-top: 30rpx;
   color:rgba(255,255,255,1);
}
