.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
  border-bottom: 12rpx solid #f5f5f5;
}
.img1{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}
.img1::before{
  content: "";
  display: block;
  width: 210rpx;
  height: 5rpx;
  background-color: #d3d3d3;
  position: relative;
  top: 30rpx;
  left:44rpx;
}
.last::before{
  display: none !important;
}
.img1 image{
  height: 100%;
  width: 100%;
}
.name{
  font-size: 38rpx;
  color:rgba(153,153,153,1);
}
.address_info{
  height: 180rpx;
  border-bottom: 25rpx solid #F5F5F5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address_name{
  display: flex;
  align-items: center;
}
.name1{
  display: flex;
  color:rgba(102,102,102,1);
  font-size: 34rpx;
  font-weight:400;
  margin-bottom: 10rpx;
}
.name1 view{
  margin-right: 30rpx;
}
.right{
  height: 35rpx;
  width: 35rpx;
  margin-right: 20rpx;
}
.person6{
  height: 80rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.info{
  color:rgba(102,102,102,1);
  font-size: 34rpx;
  font-weight:400;
}
.img{
  margin-right: 15rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  width: 180rpx;
  height: 150rpx;
}
.img image{
  border-radius: 20rpx;
  height: 100%;
  width: 100%;
}
.shop_info{
  display: flex;
  align-items: center;
  height: 250rpx;
}
.shop_name{
  margin-right: 30rpx;
}
.shop_num{
  display: flex;
  justify-content: space-between;
}
.num{
  width: 100rpx;
  height: 40rpx;
  border: 5rpx solid#DCDCDC;
  font-size: 25rpx;
  line-height: 40rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  border-radius: 14rpx;
}
.name{
  font-size: 33rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 30rpx;
}
.day{
  width: 180rpx;
  height: 30rpx;
  font-size: 22rpx;
  text-align: center;
  color:rgba(252,255,253,1);
  border-radius: 40rpx;
  line-height: 30rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.money{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx 30rpx 30rpx;
  font-size: 36rpx;
  color:rgba(102,102,102,1);
}
.money text{
  font-weight: 400;
}
.fare{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  color:rgba(102,102,102,1);
  margin: 30rpx 30rpx 30rpx 28rpx;
}
.money_1{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  color:rgba(51,51,51,1);
  border-bottom: 5rpx solid #F5F5F5;
}
.money_1 view{
  font-size: 37rpx;
  font-weight: 400;
  padding-left: 30rpx;
}
.money_1 text{
  font-size: 37rpx;
  padding-right: 30rpx;
}
.reality{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  border-bottom: 35rpx solid #F5F5F5;
}
.reality view{
  font-size: 39rpx;
  font-weight: 500;
}
.reality text{
  font-size: 39rpx;
  color:rgba(255,0,0,1);
}
.infor_pay{
  display: flex;
  font-size: 36rpx;
  color:rgba(102,102,102,1);
  margin: 30rpx 0 0 35rpx;
}
.infor_name{
  font-size: 39rpx;
  color:rgba(51,51,51,1);
  margin: 30rpx 0 0 35rpx;
}
.infor{
    height: 380rpx;
    border-bottom: 20rpx solid #F5F5F5;
}















