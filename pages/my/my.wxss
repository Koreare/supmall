.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  width: 100%;
}
.top_info{
  width: auto;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 5rpx solid #f5f5f5;
}
.top_info::-webkit-scrollbar {display:none}
.float{
  display: inline-block;
  height: 95rpx;
  line-height: 95rpx;
  /* margin-right: 15rpx; */
  font-size: 32rpx;
  color:rgba(102,102,102,1);
  /* margin-left: 14rpx; */
  text-align: center;
  width: calc(100% / 6);
}
.active{
  color:rgba(68,187,255,1);
}
.info{
  margin-top: 30rpx;
}
.per{
  height: 40rpx;
  width: 40rpx;
  margin-left: 15rpx;
}
.right{
  margin-top: 6rpx;
  height: 30rpx;
  width: 30rpx;
}
.info_top{
  display: flex;
  align-items: center;
}
.info_top view{
  font-size: 32rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.shop{
  width: 95%;
  margin-left: 2.5%;
  /* height: 220rpx; */
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-top: 30rpx;
}
.shop_info{
  /* display: flex; */
  align-items: center;
  /* height: 220rpx; */
  padding-top: 25rpx;
  padding-bottom: 18rpx;
}
.shop_name{
  width: calc(100% - 250rpx);
  display: inline-block;
  vertical-align: top;
}
.shop_num{
  display: flex;
  justify-content: space-between;
}

.name{
  font-size: 33rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 30rpx;
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.day{
  font-size: 30rpx;
}
.shop_number{
  display: flex;
}
.number{
  font-size: 30rpx;
}
.less{
  font-size: 30rpx;
  margin-top: 5rpx;
  margin-right: 8rpx;
}
.info{
  color:rgba(102,102,102,1);
  font-size: 34rpx;
  font-weight:400;
}
.img{
  margin-right: 15rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  width: 180rpx;
  height: 183rpx;
  display: inline-block;
}
.img image{
  /* border-radius: 20rpx; */
  height: 100%;
  width: 100%;
}
.pay{
   height: 100rpx;
   display: flex;
   justify-content: flex-end;
   align-items: center;
   border-bottom: 5rpx solid #f5f5f5;
   font-size: 32rpx;
   font-weight:500;
   color:rgba(51,51,51,1);
   margin-right: 2.5%;
}
.button{
  display: flex;
  justify-content: flex-end;
  height: 120rpx;
  align-items: center;
  border-bottom: 15rpx solid #f5f5f5;
}
.button_1{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  border: 2rpx solid #dcdcdc;
  border-radius: 14rpx;
  color:rgba(51,51,51,1);
  margin-right: 10rpx;
}
.button_2{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  border: 5rpx solid #f5f5f5;
  border-radius: 14rpx;
  color:rgba(255,255,255,1);
  background-image: linear-gradient(#62A5FF, #29C0D9);
  margin-right: 20rpx;
}
.button_3{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  border: 5rpx solid #dcdcdc;
  border-radius: 14rpx;
  color:rgba(51,51,51,1);
  margin-right: 10rpx;
}
.mark{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: #000000;
  opacity: 0.5;
}
.yes{
  width: 70%;
  height: 300rpx;
  margin-left: 15%;
  border-radius: 20rpx;
  position: fixed;
  top: 30%;
  background-color: #ffffff;
}
.yes_name{
  font-size: 35rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  margin: 50rpx 30rpx 80rpx 30rpx;
}
.yes_info{
  display: flex;
  justify-content: space-around;
}
.yes_info view{
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  border-radius: 14rpx;
}
.yes_info text{
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  color:rgba(153,153,153,1);
  border-radius: 14rpx;
}







