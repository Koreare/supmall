
.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 5rpx solid #F5F5F5;
}
.top view{
  font-size: 32rpx;
  color:rgba(102,102,102,1);
  margin-left: 30rpx;
}
.top image{
  height: 35rpx;
  width: 35rpx;
  margin-bottom: -8rpx;
  margin-left: 10rpx;

}




.info_image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.info_image image{
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}
.info_address{
  display: flex;
  margin-bottom: 60rpx;
}
.info_address image{
  height: 40rpx;
  width: 35rpx;
  margin-top: 5rpx;
}
.info_nomber_name{
  display: flex;
}
.info_number image{
  height: 40rpx;
  width: 40rpx;
}
.info_name{
  width: 70%;
}
.info_nomber_money{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 30rpx;
}
.money1{
  color:rgba(255,0,0,1);
  font-size: 38rpx;
  margin-left: 20rpx;
}
.info{
  display: flex;
  border-bottom: 5rpx solid	#F5F5F5;
  margin: 30rpx 20rpx 0rpx 20rpx;
  padding-bottom: 20rpx;
}
.name{
  font-size: 32rpx;
  margin-bottom: 15rpx;
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 97%;
  color: rgba(51,51,51,1);
}
.info_address view{
  color:rgba(205,205,205,1);
  font-size: 30rpx;
  margin-left: 15rpx;
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.money2{
    color:rgba(205,205,205,1);
    margin-left: 10rpx;
    text-decoration: line-through;
}