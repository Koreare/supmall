.header{
  height: 300rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  display: flex;
  align-items: center;
}
.header_image{
  margin-left: 30rpx;
  margin-right: 20rpx;
  height: 120rpx;
  width: 120rpx;
}
.header_image image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.top view{
  font-size: 34rpx;
  color:rgba(255,255,255,1);
}
.number{
  text-align: center;
  font-size: 60rpx;
  color:rgba(255,255,255,1);
}
.day{
  margin-top: 25rpx;
  display: flex;
  justify-content: center;
  text-align: center;
}
.day view{
  font-size: 30rpx;
  border-radius: 50rpx;
  width: 320rpx;
  height: 50rpx;
  color:rgba(68,187,255,1);
  line-height: 50rpx;
  background-color: #ffffff;
}
.in_info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 140rpx;
  border-bottom: 5rpx solid #f5f5f5;
}
.in_info_1{
  margin-left: 30rpx;
}
.in_info_1 view{
  font-size: 35rpx;
  margin-bottom: 10rpx;
}
.in_info_1 text{
  color:rgba(153,153,153,1);
  font-size: 28rpx;
}
.in_info_2{
  font-size: 35rpx;
  margin-right: 40rpx;
}













