.header{
  height: 150rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.header_address{
  display: flex;
  align-items: center;
}
.address_info{
  display: flex;
  align-items: center;
}
.header_address view{
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.header_search{
  margin-right: 20rpx;
  justify-content: center;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  width: 70%;
  height: 60rpx;
  background-color: rgba(255,255,255,1);
}
.header_search view{
  font-size: 25rpx;
  color:rgba(219,219,219,1);
}
input{
  border-radius: 30rpx;
  border: 1rpx solid #eee;
  width: 68%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  position: relative;
  left: calc((30vw - 150rpx) / 3);
  background-color: #f8f8f8;
  padding: 0 40rpx;
}
button{
  border-radius: 30rpx;
  width: 150rpx;
  float: right;
  position: relative;
  line-height: 60rpx;
  font-size: 30rpx;
  /* right: calc((30vw - 150rpx) / 3); */
  margin-right: 15px;
  color: #666;
}
button::after{
  border: none;
}
form view{
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}

.address{
  height: 38rpx;
  width: 33rpx;
  margin-left: 20rpx;
}
.right{
  height: 20rpx;
  width: 30rpx;
}
.search{
  height: 40rpx;
  width: 40rpx;
}
.history{
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 5rpx solid #f5f5f5;
  color:rgba(102,102,102,1);
  font-size: 32rpx;
  padding-left: 25rpx;
}

.info{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}
.list{
  width: 46%;
  display: flex;
  flex-wrap: wrap;
  margin-left: 2%;
}
.list_info{
  width: 100%;
  border-radius: 10rpx;
  border: 5rpx solid #f5f5f5;
  margin-right: 4%;
  margin-top: 25rpx;
  overflow: hidden;
}
.list_info image{
  /* border-radius: 20rpx 20rpx 0 0; */
  width: 100%;
  height: 280rpx;
}
.name{
  font-size: 29rpx;
  margin: 0 auto;
  width: 92%;
  margin-top: 15rpx;
  color:rgba(51,51,51,1);
    overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list_money{
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.money{
  font-size: 30rpx;
}
.money text{
  font-size: 34rpx;
}
.num{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  color:rgba(153,153,153,1);
}
.box{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 14rpx;
  text-align: center;
  color:rgba(102,102,102,1);
  font-size: 28rpx;
  margin: 30rpx 60rpx 30rpx 70rpx;
}
.history_1{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.tanchu{
  width: 60%;
  height: 150rpx;
  color: limegreen;
  font-size: 35rpx;
  text-align: center;
  line-height: 150rpx;
  position: fixed;
  border-radius: 10rpx;
  left: 20%;
  top: calc(50vh - 100rpx);
  z-index: 100001;
  background-color: white;
}
.zhezhao{
  width: 100vw;
  height: 100vh;
  background-color: black;
  opacity: 0.5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}
.hide{
  display: none;
}
.show{
  display: block;
}