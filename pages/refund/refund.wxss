  border-bottom: 5rpx solid #f5f5f5;
}
.footer_name image{
  margin-right: 30rpx;
  height: 40rpx;
  width: 40rpx;
}
.footer_name view{
  font-size: 35rpx;
  color:rgba(51,51,51,1);
  margin-left: 30rpx;
}
