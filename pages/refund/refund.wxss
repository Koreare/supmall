.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top_name{
  font-size: 32rpx;
  margin-left: 30rpx;
  color:rgba(51,51,51,1);
}
.top{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top_info{
  display: flex;
  justify-content: space-around;
  width: 65%;
}
.top_info_img{
  display: flex;
  align-items: center;
}
.top_info_img image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}
.top_info_img view{
  font-size: 32rpx;
  color:rgba(51,51,51,1);
}

.in{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.in view{
  font-size: 32rpx;
  margin-left: 30rpx;
  color:rgba(51,51,51,1);
}
.in text{
  font-size: 31rpx;
  color:rgba(51,51,51,1);
 
}
.info{
  padding-bottom: 40rpx;
  border-bottom: 12rpx solid #f5f5f5;
}
.in image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 30rpx;
}
.money{
  display: flex;
  align-items: center;
  height: 140rpx;
  border-top: 12rpx solid #f5f5f5;
  border-bottom: 12rpx solid #f5f5f5;
}
.money view{
  font-size: 35rpx;
  margin-left: 30rpx;
}
.money text{
  font-size: 35rpx;
  color:rgba(232,37,70,1);
}
.totalprice{
  margin-left: 160rpx;
}
.info_top{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.name{
  font-size: 32rpx;
  margin-left: 30rpx;
  color:rgba(51,51,51,1);
}
.name1{
  color:rgba(153,153,153,1);
  font-size: 32rpx;
  margin-right: 30rpx;
}
.info textarea{
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.info_image{
  margin-left: 30rpx;
  height: 180rpx;
  width: 28%;
  margin-top: 20rpx;
}
.info_image image{
  height: 100%;
  width: 100%;
  border-radius: 14rpx;
}
.photo{
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 12rpx solid #f5f5f5;
}

.photo view{
  font-size: 38rpx;
  color:rgba(51,51,51,1);
  margin-left: 30rpx;
}
.photo text{
  font-size: 38rpx;
  color:rgba(51,51,51,1);
  margin-left: 160rpx;
}
.botton{
  width: 70%;
  height: 80rpx;
  margin-left: 15%;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
  text-align: center;
  font-size: 38rpx;
  color:rgba(255,255,255,1);
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.button1{
  width: 70%;
  margin-left: 15%;
  height: 70rpx;
  line-height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
  text-align: center;
  font-size: 35rpx;
  color:rgba(255,255,255,1);
  border-radius: 50rpx;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}
.mark{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  z-index: 100;
  opacity: 0.5;
}
.footer{
  z-index: 1002;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #ffffff;
}
.check{
  margin-right: 20rpx;
}

.footer_info{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
  background-color: #ffffff;
}
.footer_info view{
  font-size: 38rpx

}
