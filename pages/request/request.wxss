.header{
  height: 100rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 35rpx;
  color:rgba(102,102,102,1);
}
.active::after{
  content: "";
	display: block;
  width: 80rpx;
  height: 4rpx;
  background-color:#62A5FF;
  position: relative;
  top: 20rpx;
  left: 20rpx;
}
.img{
  display: flex;
  align-items: center;
  border-top: 15rpx solid #f5f5f5;
}
.image{
  height: 200rpx;
  width: 300rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
}
.image image{
  height: 100%;
  width: 100%;
}
.img_name{
  font-size: 39rpx;
  color:rgba(102,102,102,1);
  margin-bottom: 50rpx;
}
.img_info{
  width: 100%;
}
.img_day{
  display: flex;
  justify-content: flex-end;
  color:rgba(102,102,102,1);
  font-size: 30rpx;
  margin-right: 30rpx;
}