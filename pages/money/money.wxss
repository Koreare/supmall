.mark{
  width: 100%;
  height: 100%;
  background-color: #000000;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.5;
  z-index: 1000;
}
.rule{
  width: 80%;
  height: 440rpx;
  background-color: #ffffff;
  margin-left: 10%;
  border-radius: 20rpx;
  position: fixed;
  top: 20%;
  z-index: 1001;
  overflow :auto;
}
.rule_name{
  font-size: 35rpx;
  color:rgba(211,16,8,1);
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 70rpx;
}
.rule_info{
  font-size: 30rpx;
  color:rgba(102,102,102,1);
  margin-left: 20rpx;
}
.rule_info view{
  margin-bottom: 30rpx;
}
