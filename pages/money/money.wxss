.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color:rgba(153,153,153,1);
  background-color: #f5f5f5;
}
.top view{
  padding: 0 30rpx;
}
.in_card_image{
  height: 50rpx;
  width: 70rpx;
  margin-right: 20rpx;
  padding-left: 30rpx;
}
.in_card_image image{
  height: 100%;
  width: 100%;
}
.png{
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}
.in_card{
  height: 110rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
  border-bottom: 5rpx solid #f5f5f5;
}
.in_card_1{
  display: flex;
  align-items: center;
}
.in_card_name{
  font-size: 33rpx;
  color:rgba(102,102,102,1);
}
.in_card_2{
  display: flex;
  align-items: center;
}
.line{
  border: 12rpx solid #f5f5f5;
}
.money_name{
  height: 80rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size: 33rpx;
  color:rgba(102,102,102,1);
}
.money_info{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.money_info view{
  font-size: 37rpx;
  margin-left: 24rpx
}
.money_info input{
  width: 90%;
  font-size: 42rpx;
}
.money_all_image image{
  height: 40rpx;
  width: 43rpx;
}
.money_all_image{
  display: flex;
  align-items: center;
}
.money_all{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.money_all_name{
  font-size: 30rpx;
  color:rgba(153,153,153,1);
  margin-left: 30rpx;
}
.money_all_name text{
  color: rgba(211, 16, 8, 1);
}
.money_all_image view{
  font-size: 33rpx;
  margin-right: 30rpx;
  margin-left: 15rpx;
  color:rgba(102,102,102,1);
}
.money{
  height: 260rpx;
  background-color: #ffffff;
}
