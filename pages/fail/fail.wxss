.header{
  height: 80rpx;
  background-image: linear-gradient(#62A5FF, #29C0D9);
}
.top{
  width: 95%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  margin-left: 2.5%;
  border-radius: 20rpx;
  background-image: linear-gradient( to right, #62A5FF, #29C0D9); 
}
.top_info{
  display: flex;
  align-items: center;
  height: 200rpx;
}
.top_info image{
  margin-left: 50rpx;
  margin-right: 25rpx;
  height: 80rpx;
  width: 80rpx;
}
.top_info_name view{
  font-size: 38rpx;
  color:rgba(255,255,255,1);
}
.top_info_name text{
  font-size: 30rpx;
  color:rgba(255,255,255,1);
}
.in{
  font-size: 34rpx;
  color:rgba(51,51,51,1);
  margin-top: 50rpx;
  margin-left: 30rpx;
}
.shop{
  width: 95%;
  margin-left: 2.5%;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.shop_info{
  display: flex;
  align-items: center;
  height: 220rpx;
}
.shop_name{
  margin-right: 30rpx;
  width: 63%;
}
.shop_num{
  display: flex;
  justify-content: space-between;
}

.name{
  font-size: 30rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 30rpx;
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.day{
  font-size: 25rpx;
  color:rgba(102,102,102,1);
}
.num{
  font-size: 25rpx;
  color:rgba(102,102,102,1);
}
.info{
  color:rgba(102,102,102,1);
  font-size: 34rpx;
  font-weight:400;
}
.img{
  margin-right: 15rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  width: 180rpx;
  height: 150rpx;
}
.img image{
  border-radius: 20rpx;
  height: 100%;
  width: 100%;
}
.infor_pay{
  display: flex;
  font-size: 32rpx;
  color:rgba(102,102,102,1);
  margin: 30rpx 0 0 35rpx;
}
.infor_name{
  font-size: 35rpx;
  color:rgba(51,51,51,1);
  margin: 30rpx 0 0 35rpx;
}
.infor{
  padding-bottom: 25rpx;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #F5F5F5;
}















